<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        Ôn GK
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
</head>

<body>
   
<div class="container">
    <% if(typeof alert != 'undefined') { %>
        <% alert.forEach(function(error) { %>
            <div class="mb-3 row justify-content-md-center alert alert-warning alert-dismissible fade show" role="alert">
                <%= error.msg %>
              </div>
        <% }) %>
        <div class="mb-3 row justify-content-md-center form-label h1 text-danger "> Vui lòng nhập lại giữ liệu</div>
    <% } %>    
        <form action="/" method="post" enctype="multipart/form-data">
            <div class="mb-3 row justify-content-md-center">
                <label for="exampleFormControlInput1" class="form-label">Mã bài báo:</label
      >
      <input
        type="text"
        name="idPaper"
        class="form-control"
        id="idPaper"
        placeholder="Mã bài báo"
      />
      <label for="exampleFormControlInput1" class="form-label"
        >Tên bài báo:
      </label>
                <input type="text" name="namePaper" class="form-control" id="namePaper" placeholder="Tên bài báo" />
                <label for="exampleFormControlInput1" class="form-label">Tên nhóm tác giả:
      </label>
                <input type="text" name="nameAuthor" class="form-control" id="so_luong" placeholder="Tên nhóm tác giả" />
                <label for="exampleFormControlInput1" class="form-label">Chỉ số ISBN:
              </label>
                <input type="text" name="ISBN" class="form-control" id="namePaper" placeholder="Chỉ số ISBN" />
                <label for="exampleFormControlInput1" class="form-label">Số trang:
                </label>
                <input type="number" name="pageNumber" class="form-control" id="pageNumber" placeholder="Số trang" />
                <label for="exampleFormControlInput1" class="form-label">Năm xuất bản:
                </label>
                <input type="number" name="year" class="form-control" id="year" placeholder="Năm xuất bản" />
                <div class="row justify-content-center">
                    <input type="submit" class="btn btn-primary col-3 m-3" id="submit" class="form-control" />
                </div>
            </div>
        </form>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th scope="row">STT</th>
                    <th scope="row">Tên bài báo</th>
                    <th scope="row">Tên nhóm tác giả</th>
                    <th scope="row">Chỉ số ISBN</th>
                    <th scope="row">Số trang</th>
                    <th scope="row">Năm xuất bản</th>
                    <th scope="row">Chức năng</th>
                </tr>
                <% for (var i = 0; i < data.length; i++) { %>
                    <tr>
                        <td scope="row">
                            <%= data[i].idPaper %>
                        </td>
                        <td scope="row">
                            <%= data[i].namePaper %>
                        </td>
                        <td scope="row">
                            <%= data[i].nameAuthor %>
                        </td>
                        <td scope="row">
                            <%= data[i].ISBN %>
                        </td>
                        <td scope="row">
                            <%= data[i].pageNumber %>
                        </td>
                        <td scope="row">
                            <%= data[i].year %>
                        </td>
                        <td scope="row">
                            <form action="/delete" method="post" enctype="multipart/form-data">
                                <input type="hidden" value="<%= data[i].idPaper %>" name="idPaper" />
                                <input type="submit" value="Xóa" />
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
